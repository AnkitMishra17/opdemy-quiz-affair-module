<h1>Add Quiz</h1>

<form action="/add-quiz" method="POST" class="">  
       <input type="text" name="question" placeholder="Enter question..." value="" class="text-dark" required>
       <input type="text" name="optionA" placeholder="option A" value="" class="text-dark" required>
       <input type="text" name="optionB" placeholder="option B" value="" class="text-dark" required>
       <input type="text" name="optionC" placeholder="option C" value="" class="text-dark" required>
       <input type="text" name="optionD" placeholder="option D" value="" class="text-dark" required>
       <select id="select" name="answer" required>
        <option value="" disabled selected>Select correct option</option>
        <option value="A">A</option>
        <option value="B">B</option>
        <option value="C">C</option>
        <option value="D">D</option>
      </select>
       <button type="submit" id="submit" class="mt-3 w-50">Add question</button>                
</form>
