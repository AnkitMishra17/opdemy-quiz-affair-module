<%- include("partials/header.ejs") %>

<style>
::placeholder{
  color: #696969;
  font-family: 'livvic',sans-serif;
}
</style>
<h1>Add Quiz</h1>
    <% for(let i = 0; i < data.length; i++) {  %>
        
       <p class="text-dark" style="font-size: 20px;"><%= data[i].question %></p>
       <input type="radio" class="radiobtn" name="question<%= i+1 %>" value="A" class="text-dark" > <input class="choices" type="text" value="<%= data[i].optiona %>" disabled>
       <input type="radio" class="radiobtn" name="question<%= i+1 %>" value="B" class="text-dark" > <input class="choices" type="text" value="<%= data[i].optionb %>" disabled>
       <input type="radio" class="radiobtn" name="question<%= i+1 %>" value="C" class="text-dark" > <input class="choices" type="text" value="<%= data[i].optionc %>" disabled>
       <input type="radio" class="radiobtn" name="question<%= i+1 %>" value="D" class="text-dark" > <input class="choices" type="text" value="<%= data[i].optiond %>" disabled>
       <% } %>
       <button type="button" onclick="displayRadioValue()" id="submit" class="mt-3 w-50">Submit</button>
       <div id="result"></div> 
	
<script>
  let dataaa = new Array();
  dataaa = "<%= answers %>";
  dataaa = dataaa.toString().split(',');
  console.log(dataaa);
  function displayRadioValue() { 
	
  var ele = document.getElementsByClassName('radiobtn'); 
  var choices = document.getElementsByClassName('choices');
  var counter = 0; 
  var j = 0; 
  for(let i=0; i< ele.length; i++){
    if(ele[i].type="radio") { 
        if(ele[i].checked) {
          // console.log(ele[i]);
          // console.log(choices[i]);
          if(ele[i].value != dataaa[j]){
            counter++;
            j++;
          }else{
            j++;
          };
          document.getElementById("result").innerHTML 
              += ele[i].name + " Value: " 
              + choices[i].value + "<br>";
           
            }
  }
}
console.log(counter);  
}
</script>
